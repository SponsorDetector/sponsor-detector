{
	"manifest_version" : 2,
	"version" : "0.0.1",
	"name" : "Sponsor Detector",
	"description": "Helps to bring sponsorised content to the light.",
	"applications" : {
		"gecko": {
			"id" : "sponsor-detector@ogdabou.com"
		}
	},
	"permissions" : [
		"activeTab",
		"tabs",
		"webRequest",
		"alarms",
		"http://localhost:10010/*"
	],
	"icons" : {
		"64" : "icons/icon-64.png"
	},
	"content_scripts" : [
		{
			"matches" : [ "*://*/*" ],
			"css" : [
				"/libs/pure-min.css",
		        "/libs/grids-responsive-min.css",
			    "/css/detector.css"
			],
			"js" : [ 
				"/libs/promise.min.js",
				"/commons/utils.js",

				"/commons/dom/FormFactory.js",
				"/commons/dom/BannerFactory.js",
				"/commons/dom/DetectorBannerFactory.js",
				"/commons/services/ConfigurationServices.js",
				"/commons/services/ExtractorServices.js",
				"/commons/services/DetectorServices.js",
				"/commons/services/SponsorDetector.js",

				"detector_banner/main.js" ] 
		}
	],
	"browser_action": {
		"default_icon" : "icons/icon-64.png",
		"default_popup" : "popup/popup.html",
		"default_title" : "Sponsor Detector"
	}
}